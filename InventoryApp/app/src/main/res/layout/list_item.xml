<?xml version="1.0" encoding="utf-8"?>
<!-- Layout for a single list item in the list of pets -->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimaryDark"
    android:orientation="vertical"
    android:padding="10dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/name"
            style="@style/wrapViews"
            android:fontFamily="sans-serif-medium"
            android:layout_alignParentStart="true"
            android:textSize="28dp"
            android:layout_marginStart="10dp"
            android:layout_alignParentLeft="true"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="@color/colorText"  />

        <TextView
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:padding="8dp"
            android:textSize="26sp"
            android:fontFamily="sans-serif"
            android:textAppearance="?android:textAppearanceSmall"
            android:textColor="@color/priceViewColor"  />


    </RelativeLayout>

    <View style="@style/ViewDesignHorizontalThinName"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <LinearLayout
            style="@style/wrapViews"
            android:orientation="horizontal"
            android:layout_alignParentLeft="true"
            android:padding="8dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true">

            <TextView
                style="@style/wrapViews"
                android:textColor="@color/colorQuantityText"
                android:textStyle="italic"
                android:textSize="22sp"
                android:text="@string/inStock"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="22sp"
                android:textStyle="italic"
                android:textColor="@color/colorQuantityText"
                android:padding="8dp"
                android:textAppearance="?android:textAppearanceSmall"
                android:id="@+id/quantity_text_view"/>


        </LinearLayout>


        <Button
            android:id="@+id/sale"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:padding="8dp"
            android:layout_alignParentBottom="true"
            style="@style/wrapViews"
            android:text="@string/saleButton"/>

    </RelativeLayout>


</LinearLayout>
